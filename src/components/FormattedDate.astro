---
interface Props {
  date: Date;
  className?: string;
}

const { date = new Date(), className } = Astro.props;
---

<time datetime={date.toISOString()} class={`${className}`}>
  {
    date.toLocaleDateString("en-GB", {
      day: "2-digit",
      month: "short",
      year: "numeric",
    })
  }
</time>
